### pffilter-engine logger ###
log4perl.rootLogger = INFO, PFFILITER_ENGINE

### Categories ###
# Below, you can specify different categories (based on package names) for different logging levels
#log4perl.category.pf.SNMP = WARN

### Logging for pffilter-engine
log4perl.appender.PFFILITER_ENGINE                              = pf::log::FileAppender
log4perl.appender.PFFILITER_ENGINE.filename                     = /usr/local/pf/logs/pffilter-engine.log
log4perl.appender.PFFILITER_ENGINE.syswrite                     = 1
log4perl.appender.PFFILITER_ENGINE.mode                         = append
log4perl.appender.PFFILITER_ENGINE.layout                       = PatternLayout
log4perl.appender.PFFILITER_ENGINE.layout.ConversionPattern     = %d{MMM dd HH:mm:ss} %X{proc}(%X{tid}) %p: %m (%M)%n
log4perl.appender.PFFILITER_ENGINE.umask                        = 0002
log4perl.appender.PFFILITER_ENGINE.user                         = pf
log4perl.appender.PFFILITER_ENGINE.group                        = pf
log4perl.appender.PFFILITER_ENGINE.binmode                      = utf8
