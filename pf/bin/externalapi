  my $srcip=shift @ARGV; 
  my $sid=shift @ARGV;
  my $date=shift @ARGV;
  my $descr=shift @ARGV;
  my $dstip=shift @ARGV;
  open(VIOLATIONLOG, ">>ALERTLOG") || die "Unable to open violation log: $!\n";
  print VIOLATIONLOG "$srcip $sid $date $descr $dstip\n";
  #close(VIOLATIONLOG);



