<fop version="1.0">
  <renderers>
    <renderer mime="application/pdf">
      <fonts>
        <font metrics-url="docs/fonts/inconsolata.xml" kerning="yes" embed-url="docs/fonts/inconsolata.ttf">
          <font-triplet name="Incosolata" style="normal" weight="normal"/>
        </font>
        <font metrics-url="docs/fonts/oflgoudystm.xml" kerning="yes" embed-url="docs/fonts/oflgoudystm.ttf">
          <font-triplet name="Sorts Mill Goudy" style="normal" weight="normal"/>
        </font>
        <font metrics-url="docs/fonts/oflgoudystmitalic.xml" kerning="yes" embed-url="docs/fonts/oflgoudystmitalic.ttf">
          <font-triplet name="Sorts Mill Goudy" style="italic" weight="normal"/>
        </font>
        <font metrics-url="docs/fonts/deliciousroman.xml" kerning="yes" embed-url="docs/fonts/deliciousroman.ttf">
          <font-triplet name="Delicious" style="normal" weight="normal"/>
        </font>
        <font metrics-url="docs/fonts/deliciousitalic.xml" kerning="yes" embed-url="docs/fonts/deliciousitalic.ttf">
          <font-triplet name="Delicious" style="italic" weight="normal"/>
        </font>
      </fonts>
    </renderer>
  </renderers>
</fop>
