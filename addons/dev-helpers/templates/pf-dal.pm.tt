package [% class %];

=head1 NAME

[% class %] -

=cut

=head1 DESCRIPTION

[% class %] -

=cut

use strict;
use warnings;
use base qw(pf::dal);

our @FIELD_NAMES = qw(
[% FOREACH col IN cols -%]
    [% col.COLUMN_NAME %]
[% END -%]
);

[% FOREACH col IN cols -%]
=head2 [% col.COLUMN_NAME %]

=cut

sub [% col.COLUMN_NAME %] {
    my ($self, $val) = @_;
}

[% END -%]

[% IF primary_keys.size > 0 %]
our @PRIMARY_KEYS = qw(
[% FOREACH col IN primary_keys -%]
    [% col.COLUMN_NAME %]
[% END -%]
);

our $FIND_SQL = do {
    my $where = join(", ", map { "$_ = ?" } @PRIMARY_KEYS);
    "SELECT * FROM [% TABLE_NAME %] WHERE $where;";
};

sub _find_one_sql {
    my ($proto) = @_;
    return $FIND_SQL;
}

[% END %]
 
